<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <TextView
        android:id="@+id/energy_settings_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charts"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-condensed"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true" />

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="75dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/history_chart"
                style="@style/CardViewUsual"
                android:layout_width="350dp"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content">


                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barchart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="#2D2A3E" />

            </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_below="@id/history_chart">

                        <TextView
                            android:id="@+id/title_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="16dp"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            android:text="Month"
                            android:fontFamily="sans-serif"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/title_chart_of"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:layout_marginEnd="16dp"
                            android:layout_toEndOf="@+id/month_tf"
                            android:fontFamily="sans-serif"
                            android:textSize="16sp"
                            android:text="Chart of"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/month_tf"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/title_month"
                            android:layout_alignParentStart="true"
                            app:boxBackgroundColor="@color/white"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toStartOf="@id/chart_of_tf"
                            android:fontFamily="sans-serif"
                            android:hint="Select"
                            android:textColorHint="#A2A5AB">

                            <AutoCompleteTextView
                                android:id="@+id/month_dropdown"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:hapticFeedbackEnabled="false"
                                android:paddingTop="0dp"
                                android:paddingBottom="0dp"
                                android:popupTheme="@android:style/ThemeOverlay.Material.Light" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/chart_of_tf"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/title_chart_of"
                            app:boxBackgroundColor="@color/white"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="sans-serif"
                            android:hint="Select"
                            android:textColorHint="#A2A5AB">

                            <AutoCompleteTextView
                                android:id="@+id/chart_of_dropdown"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:hapticFeedbackEnabled="false"
                                android:paddingTop="0dp"
                                android:paddingBottom="0dp"
                                android:popupTheme="@android:style/ThemeOverlay.Material.Light" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/bottom_navigation_view" />
</RelativeLayout>