<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:gravity="center"
    android:orientation="vertical">

    <com.mancj.materialsearchbar.MaterialSearchBar
        android:id="@+id/material_search_bar"
        android:layout_width="375dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:background="#2D2A3E"
        android:layout_marginBottom="650dp"
        app:mt_backIconDrawable="@drawable/ic_left_arrow_foreground"
        app:mt_clearIconDrawable="@drawable/ic_close_foreground"
        app:mt_hint="Search"
        app:mt_hintColor="#A2A5AB"
        app:mt_textColor="@color/black"
        app:mt_highlightedTextColor="@color/white"
        app:mt_maxSuggestionsCount="10"
        app:mt_placeholder="Search"
        app:mt_roundedSearchBarEnabled="false"
        app:mt_searchBarColor="@color/white"
        app:mt_speechMode="false" />

</LinearLayout>