<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#2D2A3E"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/dashboard_left_image_view"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/dashboard_center_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Food Name"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dashboard_right_text_view"
            android:layout_width="44dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_height="22dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:text="999"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <TextView
        android:id="@+id/dashboard_below_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Food Grams"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="70dp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/gray"
        android:fontFamily="sans-serif"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dashboard_below_right_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="kcal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="325dp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textStyle="bold" />

</androidx.cardview.widget.CardView>