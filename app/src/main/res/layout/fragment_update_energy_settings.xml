<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/energy_settings_settingsAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D2A3E">
        <include layout="@layout/settings_toolbar" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/energy_settings_bmr_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/energy_settings_settingsAppBarLayout"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@id/energy_settings_bmr_spinner_box"
        android:text="BMR"
        android:fontFamily="sans-serif"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/energy_settings_activity_level_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@id/energy_settings_bmr_textview"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@id/energy_settings_activity_level_spinner_box"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:text="Activity Level"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/energy_settings_weight_goal_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/energy_settings_activity_level_textview"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@id/energy_settings_weight_goal_edittext"
        android:text="Weight Goal"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/energy_settings_bmr_spinner_box"
        android:layout_width="200dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/energy_settings_settingsAppBarLayout"
        app:boxBackgroundColor="@color/white"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:hint="BMR Formula"
        android:textColorHint="#A2A5AB">

        <AutoCompleteTextView
            android:id="@+id/energy_settings_bmr_autocomplete_textview"
            android:layout_width="match_parent"
            android:editable="false"
            android:hapticFeedbackEnabled="false"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/energy_settings_activity_level_spinner_box"
        android:layout_width="150dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/energy_settings_bmr_spinner_box"
        app:boxBackgroundColor="@color/white"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:hint="Lifestyle"
        android:textColorHint="#A2A5AB">

        <AutoCompleteTextView
            android:id="@+id/energy_settings_activity_level_autocomplete_textview"
            android:layout_width="match_parent"
            android:editable="false"
            android:hapticFeedbackEnabled="false"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/energy_settings_weight_goal_edittext"
        android:layout_width="105dp"
        android:layout_height="55dp"
        android:background="@drawable/rounded_edit_text"
        android:fontFamily="sans-serif"
        android:hint="90"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/energy_settings_activity_level_spinner_box"
        android:inputType="number"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textColorHint="#A2A5AB"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_below="@id/energy_settings_activity_level_spinner_box"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/energy_settings_weight_goal_edittext"
        android:layout_alignBaseline="@id/energy_settings_weight_goal_edittext"
        android:layout_marginTop="32dp"
        android:textColor="#A2A5AB"
        android:text="kg"
        android:textAlignment="center"
        android:textSize="16sp" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/ue_progress_circular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleLarge" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>
