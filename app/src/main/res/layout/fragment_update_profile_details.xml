<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/profile_details_settingsAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D2A3E">
        <include layout="@layout/settings_navigation_view" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/profile_details_age_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_details_settingsAppBarLayout"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@id/profile_details_age_edittext"
        android:text="Age"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/profile_details_weight_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_details_age_textview"
        android:fontFamily="sans-serif"
        android:layout_marginStart="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@id/profile_details_weight_edittext"
        android:text="Weight"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/profile_details_height_textview"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@id/profile_details_height_edittext"
        android:layout_below="@id/profile_details_weight_textview"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:text="Height"
        android:textAlignment="center"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/profile_details_sex_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@id/profile_details_sex_spinner_box"
        android:layout_below="@id/profile_details_height_textview"
        android:fontFamily="sans-serif"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:text="Sex"
        android:textAlignment="center"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/profile_details_age_edittext"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:background="@drawable/rounded_edit_text"
        android:fontFamily="sans-serif"
        android:hint="18"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/profile_details_settingsAppBarLayout"
        android:inputType="number"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textColorHint="#A2A5AB"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/profile_details_weight_edittext"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:background="@drawable/rounded_edit_text"
        android:fontFamily="sans-serif"
        android:hint="90"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/profile_details_age_edittext"
        android:inputType="number"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textColorHint="#A2A5AB"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/profile_details_height_edittext"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:background="@drawable/rounded_edit_text"
        android:fontFamily="sans-serif"
        android:hint="100"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/profile_details_weight_edittext"
        android:inputType="number"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:textColorHint="#A2A5AB"
        android:textSize="16sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="46dp"
        android:layout_below="@id/profile_details_age_edittext"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/profile_details_weight_edittext"
        android:layout_alignBaseline="@id/profile_details_weight_edittext"
        android:layout_marginTop="32dp"
        android:textColor="#A2A5AB"
        android:text="kg"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/profile_details_age_edittext"
        android:layout_alignBaseline="@id/profile_details_age_edittext"
        android:layout_marginTop="84dp"
        android:textColor="#A2A5AB"
        android:text="years"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="41dp"
        android:textColor="#A2A5AB"
        android:text="cm"
        android:layout_below="@id/profile_details_weight_edittext"
        android:layout_alignBottom="@id/profile_details_height_edittext"
        android:layout_alignBaseline="@id/profile_details_height_edittext"
        android:layout_marginTop="32dp"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profile_details_sex_spinner_box"
        android:layout_width="150dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_details_height_edittext"
        app:boxBackgroundColor="@color/white"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:hint="Sex"
        android:textColorHint="#A2A5AB">

        <AutoCompleteTextView
            android:id="@+id/profile_details_sex_spinner_box_dropdown"
            android:layout_width="match_parent"
            android:hapticFeedbackEnabled="false"
            android:editable="false"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>
